<div class = "container">
<h3>Users</h3>

<table class = "table">
  <thead>
    <tr>
      <th scope = "col">Name</th>
      <th scope = "col">Role</th>
     </tr>
   </thead>
   <tbody>
     <% @users.each do |u| %>
     <tr>
      <td> <%= u.name %> </td>
      <td> <%= u.role %> </td>
      <% if admin? %>
        <td> <%= link_to 'user', user_path(u) %></td>
        <td> <%= link_to 'edit', edit_user_path(u) %></td>
        <td> <%= link_to 'delete', delete_user_path(u)%></td>
      <% end %>
      <% if teacher? and @unenroll%>
        <td> <%=link_to 'unenroll', unenroll_path(@section, u) %></td>
      <% end %>
      </tr>
    </body>
  <% end %>
</table>

<% if admin? %>
  <%= link_to 'new user', new_user_path, class: "btn btn-primary" %>
<% end %>
</div>