<h2>Questions</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Difficulty</th>
   </tr>
   <% @questions.each do |question| %>
   <tr>
    <td> <%= question.title %> </td>
    <td> <%= question.difficulty %> </td>
    <td> <%= link_to 'proof', question_path(question) %></td>
    <% if teacher? %>
      <td> <%= link_to 'edit', edit_question_path(question) %></td>
      <td> <%= link_to 'delete', delete_question_path(question)%></td>
    <% end %>
  </tr>
  <% end %>
</table>

<% if teacher? %>
  <%= link_to 'create question', new_question_path %>
<% end %>

<% if session[:section_id] %>
  <% link_to 'back', section_path(session[:section_id]) %>
<% else %>
  <% link_to 'back', user_path(session[:user_id]) %>
<% end %>