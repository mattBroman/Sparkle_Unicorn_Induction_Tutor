<div class = "container">
<h3>Tags</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
     </tr>
   </thead>
   <tbody>
     <% @tags.each do |t| %>
     <tr>
      <td> <%= t.name %> </td>
      <td> <%= t.description %> </td>
      <td> <%= link_to 'tag', tag_path(t) %></td>
      <% if teacher? %>
        <td> <%= link_to 'edit', edit_tag_path(t) %></td>
        <td> <%= link_to 'delete', delete_tag_path(t)%></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% if teacher? %>
  <%= link_to 'new tag', new_tag_path, class: "btn btn-primary" %>
<% end %>
</div>