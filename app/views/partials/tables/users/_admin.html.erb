<div class = "container">
  <h3>Users</h3>

    <table class = "table">
      <thead>
        <tr>
          <th scope = "col">Name</th>
          <th scope = "col">Role</th>
          <th scope = "col">Edit</th>
          <th scope = "col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <% if u.id != session[:user_id] %>
            <tr>
              <td> <%= link_to "#{u.name}", user_path(u) %> </td>
              <td> <%= u.role %> </td>
              <td> <%= link_to 'Edit', edit_user_path(u) %></td>
              <td> <%= link_to 'Delete', delete_user_path(u)%></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>
</div>