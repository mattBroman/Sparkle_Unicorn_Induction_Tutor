<div class = "container">
  <h3>Sections</h3>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
       </tr>
     </thead>
     <tbody>
       <% @sections.each do |s| %>
       <tr>
        <td> <%= link_to "#{s.name}", section_path(s) %> </td>
        <td> <%= s.description %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>