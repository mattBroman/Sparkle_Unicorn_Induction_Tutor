<div class = "container">
  <h3>Sections</h3>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= link_to 'Name', admin_sections_path(sort_by: 'name') %></th>
        <th scope="col">Description</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
       </tr>
     </thead>
     <tbody>
       <% @sections.each do |s| %>
         <tr>
          <td> <%= link_to "#{s.name}", section_path(s) %> </td>
          <td> <%= s.description %> </td>
          <td> <%= link_to 'Edit', edit_section_path(s) %></td>
          <td> <%= link_to 'Delete', delete_section_path(s)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>