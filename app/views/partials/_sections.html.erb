<h2>Sections</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
   </tr>
   <% @sections.each do |s| %>
   <tr>
    <td> <%= s.name %> </td>
    <td> <%= s.description %> </td>
    <td> <%= link_to 'class', section_path(s) %></td>
    <td> <%#= link_to 'delete', delete_section_path(s)%></td>
  </tr>
  <% end %>
</table>

<%= link_to 'create section', new_section_path %>